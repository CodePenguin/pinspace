<core:PinUserControl x:Class="Pinspaces.Controls.ErrorPinPanel" x:TypeArguments="local:ErrorPin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Pinspaces.Controls"
             xmlns:core="clr-namespace:Pinspaces.Core.Controls;assembly=Pinspaces.Core.Plugins"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox Text="{Binding ErrorMessage}" d:Text="Error Message" BorderThickness="0" Background="#f8d7da" Foreground="#721c57" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True">
    </TextBox>
</core:PinUserControl>
